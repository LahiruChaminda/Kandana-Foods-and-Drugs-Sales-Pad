<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:weightSum="1"
              android:padding="5dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <Spinner android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/supplierSpinner"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inputSearch" android:textSize="25dp" android:hint="Search"/>
    <LinearLayout
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6.10"
                android:text="Item Description"
                android:textSize="20dp" android:paddingLeft="10dp"/>

        <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/right"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:gravity="right"
                android:layout_weight="1.57"
                android:textSize="20dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Free Issue"
                android:gravity="right"
                android:layout_weight="1.92"
                android:textSize="20dp"/>
    </LinearLayout>
    <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/itemList"/>
</LinearLayout>