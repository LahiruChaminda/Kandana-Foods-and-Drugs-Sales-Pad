<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal"
                android:gravity="center"
                android:text="Welcome"
                />
        <LinearLayout android:layout_width="match_parent"
                      android:weightSum="5"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textSize="@dimen/small"
                    android:text="Name"
                    />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:textSize="@dimen/small"
                    android:id="@+id/txtName"
                    />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:weightSum="5"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textSize="@dimen/small"
                    android:text="Address"
                    />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:textSize="@dimen/small"
                    android:id="@+id/txtAddress"
                    />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:weightSum="5"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textSize="@dimen/small"
                    android:text="Origin"
                    />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:textSize="@dimen/small"
                    android:id="@+id/txtOriginDate"
                    />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:weightSum="5"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textSize="@dimen/small"
                    android:text="Due Date"
                    />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:textSize="@dimen/small"
                    android:id="@+id/txtDueDate"
                    />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:weightSum="5"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textSize="@dimen/small"
                    android:text="Target"
                    />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:textSize="@dimen/small"
                    android:id="@+id/txtRepTarget"
                    />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:weightSum="5"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textSize="@dimen/small"
                    android:text="Achieved"
                    />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:textSize="@dimen/small"
                    android:id="@+id/txtAchievedTarget"
                    />
        </LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal"
                android:gravity="center"
                android:text="Messages"
                />
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/newsFeed" android:longClickable="false">
        </LinearLayout>
        <Button
                android:layout_width="match_parent"
                android:text="Make Sales Order"
                android:id="@+id/btnStart"
                android:textSize="@dimen/small"
                android:layout_height="wrap_content" android:background="@drawable/rounded_button"/>
        <Button
                android:layout_width="match_parent"
                android:text="UnProductive Call"
                android:id="@+id/btnUnProductiveCall"
                android:textSize="@dimen/small"
                android:layout_height="wrap_content" android:background="@drawable/rounded_button"/>
        <Button
                android:layout_width="match_parent"
                android:text="Sign Out"
                android:id="@+id/btnSignOut"
                android:textSize="@dimen/small"
                android:layout_height="wrap_content" android:background="@drawable/rounded_button"/>
    </LinearLayout>
</ScrollView>