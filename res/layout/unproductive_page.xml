<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1" android:padding="5dp">

    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView" android:layout_gravity="center_horizontal" android:layout_weight="1"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Unproductive Call"
            android:id="@+id/btnAddUnProductiveCall" android:layout_gravity="center_horizontal" android:layout_weight="1" android:textSize="@dimen/small"
            android:background="@drawable/rounded_button"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/btnBack" android:layout_gravity="center_horizontal" android:textSize="@dimen/small" android:singleLine="false"
            android:background="@drawable/rounded_button"/>
</LinearLayout>