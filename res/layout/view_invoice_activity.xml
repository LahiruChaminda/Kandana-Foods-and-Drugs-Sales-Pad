<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1" android:padding="5dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:weightSum="3">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Outlet Name"
                android:layout_weight="1" android:textSize="25dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txtOutlet" android:layout_weight="2" android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:weightSum="3">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="Date"
                  android:layout_weight="1" android:textSize="25dp"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="New Text" android:id="@+id/txtDate"
                  android:layout_weight="2" android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:weightSum="3" android:focusableInTouchMode="false">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="Time"
                  android:layout_weight="1" android:textSize="25dp"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="New Text" android:id="@+id/txtTime"
                  android:layout_weight="2" android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="3"
                  android:focusableInTouchMode="false">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="Invoice Amount" android:layout_weight="1"
                  android:textSize="25dp"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="New Text" android:id="@+id/txtInvoiceTotal"
                  android:layout_weight="2" android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="3"
                  android:focusableInTouchMode="false">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="No of Items" android:layout_weight="1" android:textSize="25dp"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="New Text" android:id="@+id/txtNoOfItems"
                  android:layout_weight="2" android:textSize="25dp"/>
    </LinearLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView" android:layout_weight="1"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/btnBack" android:textSize="25dp"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:id="@+id/btnFinish" android:textSize="25dp"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/btnCancel" android:textSize="25dp"/>
</LinearLayout>