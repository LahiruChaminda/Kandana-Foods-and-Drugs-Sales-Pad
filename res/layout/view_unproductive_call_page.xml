<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="5dp">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:text="Outlet Name"
            android:textSize="@dimen/small" android:padding="5dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/unProductiveCallOutlet" android:textSize="@dimen/small" android:padding="5dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:text="Reason"
            android:textSize="@dimen/small" android:padding="5dp"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/txtViewUnProductiveCallReason"
            android:textSize="@dimen/small" android:padding="5dp"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sync"
            android:id="@+id/btnUnProductiveCallSync" android:textSize="@dimen/small" android:padding="5dp"/>
</LinearLayout>